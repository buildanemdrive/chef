#. /etc/rc.d/init.d/functions

case "$1" in
        start)
                su - <%= @yarn_user %> -c "/opt/hadoop-<%= @hadoop_version %>/sbin/yarn-daemons.sh --config /etc/hadoop start nodemanager"
                RETVAL=$?
                ;;
        stop)
                su - <%= @yarn_user %> -c "/opt/hadoop-<%= @hadoop_version %>/sbin/yarn-daemons.sh --config /etc/hadoop stop nodemanager"
                RETVAL=$?
                ;;
        *)
                echo "Unsupported command"
                RETVAL=2
esac
