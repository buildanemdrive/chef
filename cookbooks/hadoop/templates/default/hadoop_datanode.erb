#. /etc/rc.d/init.d/functions

case "$1" in
        start)
                su - <%= @hdfs_user %> -c "/opt/hadoop-<%= @hadoop_version %>/sbin/hadoop-daemons.sh --config /etc/hadoop --script hdfs start datanode"
                RETVAL=$?
                ;;
        stop)
                su - <%= @hdfs_user %> -c "/opt/hadoop-<%= @hadoop_version %>/sbin/hadoop-daemons.sh --config /etc/hadoop --script hdfs stop datanode"
                RETVAL=$?
                ;;
        *)
                echo "Unsupported command"
                RETVAL=2
esac
